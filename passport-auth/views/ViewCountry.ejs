<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div align="center">
        <div class=" d-flex justify-content-center align-items-center pb-5">
            <h1>Add Country</h1>
            <a href="/logout">LogOut</a>
        </div>

        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">Table</h5>

                            <a href="/country/add" class="btn btn-success">Add</a>
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Category</th>
                                <th scope="col">Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% category.map((cat,i)=>{%>
                                <tr>
                                    <th scope="row">
                                        <%= ++i %>
                                    </th>
                                    <th scope="row">
                                        <%=cat.category %>
                                    </th>
                                    <th scope="row">
                                        <a href="/category/statusChange?status=<%= cat.status%>&statusid=<%= cat.id %>"
                                            class="btn text-white <%if (cat.status == 'active'){%> btn-success<%}else{%> btn-danger<%}%>">
                                            <%=cat.status %>
                                        </a>
                                    </th>
                                    <th scope="row">
                                        <a href="/category/deletCatagory?deleteId=<%= cat.id %>"
                                            class="btn bg-danger text-white">Delete</a>
                                        <a href="/category/editCatagory?editid=<%= cat.id %> "
                                            class="btn bg-info text-white">Edit</a>
                                    </th>


                                </tr>
                                <%})%>

                        </tbody>
                    </table>
                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>