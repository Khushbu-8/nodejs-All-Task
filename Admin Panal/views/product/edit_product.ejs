<%- include('../header') %>

    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Form</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Library
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">

                                <form action="/product/updateProduct" method="post" class="form-horizontal" enctype="multipart/form-data">
                                    <div class="card-body">
                                        <h4 class="card-title">Edit Product</h4>
                                        <input type="text" value="<%= single.id%>" name="editid">
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-end control-label col-form-label">Category</label>
                                            <div class="col-sm-9">
                                                <select name="category" onchange="categoryFilter()" id="categoryId" class="form-control" id="fname">
                                                    <option >---select Category--</option>
                                                    <% category.map((cate)=>{ %>
                                                        <option <% if(cate.category == single.categoryId.category) { %> selected <% } %>value="<%= cate.id %>"><%= cate.category %></option>
                                                      <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-end control-label col-form-label">Subcategory</label>
                                            <div class="col-sm-9">
                                               
                                                <select name="subcategory" onchange="subcategoryFilter()" id="subcategoryId" class="form-control" id="fname">
                                                    <option >---select Subategory--</option>
                                                    <% subcategory.map((val) =>{%>
                                                        <option <% if(val.subcategory == single.subcategoryId.subcategory) { %> selected <% } %>value="<%= val.id %>"><%= val.subcategory %></option>
                                                     <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-end control-label col-form-label">Subcategory</label>
                                            <div class="col-sm-9">
                                                <select name="exsubcategory" id="exsubcategoryId" class="form-control" id="fname">
                                                    <option >---select Exubategory--</option>
                                                    <% exsubcategory.map((val) =>{%>
                                                        <option <% if(val.exsubcategory == single.exsubcategoryId.exsubcategory) { %> selected <% } %>value="<%= val.id %>"><%= val.exsubcategory %></option>
                                                     <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                     
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-end control-label col-form-label">Product</label>
                                           
                                            <div class="col-sm-9">
                                                <input type="text" name="product" value="<%= single.product%>" class="form-control" id="fname"
                                                    placeholder="Product Name Here" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-end control-label col-form-label">Description</label>

                                            <div class="col-sm-9">
                                                <input type="text" name="description" value="<%= single.description%>" class="form-control" id="fname"
                                                    placeholder="Description Name Here" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-end control-label col-form-label">Qnty</label>

                                            <div class="col-sm-9">
                                                <input type="number" name="qnty" value="<%= single.qnty%>" class="form-control" id="fname"
                                                    placeholder="Qnty Name Here" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-end control-label col-form-label">Price</label>

                                            <div class="col-sm-9">
                                                <input type="number" name="price" value="<%= single.price%>" class="form-control" id="fname"
                                                    placeholder="Price Name Here" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-end control-label col-form-label">Image</label>

                                            <div class="col-sm-9">
                                                <input type="file" name="image"  class="form-control" />
                                                <img src="../<%= single.image %>"   width="100" alt="image">
                                            </div>
                                          
                                        </div>

                                    </div>
                                    <div class="border-top">
                                        <div class="card-body">
                                            <button type="submit" class="btn btn-primary">
                                                Submit
                                            </button>
                                            <a href="/product" class="btn btn-info">View</a>
                                        </div>
                                    </div>
                                </form>
                    </div>


                </div>

            </div>

        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
        <footer class="footer text-center">
            All Rights Reserved by Matrix-admin. Designed and Developed by
            <a href="https://www.wrappixel.com">WrapPixel</a>.
        </footer>
        <!-- ============================================================== -->
        <!-- End footer -->
        <!-- ============================================================== -->
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  
    <script type="text/javascript">
        function categoryFilter() {
          var id = document.getElementById('categoryId').value;
          console.log(id);
          
          $.ajax({
            url: `http://localhost:8000/product/categoryWiseFilter?id=${id}`,
            type: 'GET',
            dataType: 'json',
            success: function (res) {
              let record = res.category
              // 
              let tbl = "";
              var ans = record.map((val) => {
                tbl += `
                        <option  value=${val._id}>${val.subcategory}</option>
                       `
              })
              document.getElementById('subcategoryId').innerHTML = tbl; 
            }
          });
        }
      
        function subcategoryFilter() {
          var id = document.getElementById('subcategoryId').value; 
          $.ajax({
            url: `http://localhost:8000/product/subcategoryWiseFilter?id=${id}`,
            type: 'GET',
            dataType: 'json',
            success: function (res) {
              let record = res.subcategory
              // 
              let tbl = "";
              var ans = record.map((val) => {
                tbl += `
                        <option  value=${val._id}>${val.exsubcategory}</option>
                       `
              })
              document.getElementById('exsubcategoryId').innerHTML = tbl; 
            }
          });
        }
      </script>

    <%- include('../footer') %>