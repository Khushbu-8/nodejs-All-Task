<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table</title>
    <!-- Latest compiled and minified CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #dae0f5;">

    
    <div align="center" >
        
       
       <div class="w-50 mx-auto mt-5">
        <h1 class="pb-3">Todo List</h1>
        <table class="table table-bordered table-info">
            <thead >
                <tr >
                    <th class="bg-info">Task</th>
                    <th class="bg-info">Status</th>
                    <th class="bg-info">Deadline</th>
                    <th class="bg-info">Action</th>
                </tr>
            </thead>
            <tbody>
                <% User.map((val) =>{%>
                    <tr>
                        <td><%= val.task %></td>
                        <td><%= val.status %></td>
                        <td><%= val.date %></td>
                        <td>
                            <button class="btn btn-danger">
                                <a class=" text-white" href="/DeletRecord?id=<%= val.id%>">Delet</a> 

                            </button>
                           <button class="btn btn-success">
                            <a class="text-white" href="/EditRecord?id=<%= val.id%>">Edit</a>
                           </button>
                        </td>
                    </tr>
                <%}) %>
            </tbody>
        </table>
       </div>
      <button class="btn bg-success ">
        <a class="text-white" href="/add">add</a>

      </button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>